<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Number_of_Hands</fullName>
    <active>true</active>
    <errorConditionFormula>(Number_of_Hands__c &lt; 0) || (Number_of_Hands__c &gt; 2)</errorConditionFormula>
    <errorDisplayField>Number_of_Hands__c</errorDisplayField>
